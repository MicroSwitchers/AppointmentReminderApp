}

.timer-hub-close {
    background: rgba(255, 255, 255, 0.05);
    border: none;
    color: var(--muted-text-color);
    cursor: pointer;
    padding: 6px;
    border-radius: 6px;
    transition: all 0.2s ease;
    font-size: 16px;
    line-height: 1;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
