}

.past {
    opacity: 0.7;
    filter: grayscale(20%);
}

.past .appointment-title {
    text-decoration: line-through;
}

@media (max-width: 768px) {
    .appointment-info {
        flex-direction: column;
        gap: 15px;
    }

    .appointment-buttons {
        margin-left: 0;
